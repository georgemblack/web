---
import { getCombined } from "../util/Api";
import { timestamp, slug, isLike } from "../util/Format";
import Post from "../layouts/Post.astro";

export async function getStaticPaths() {
  const combined = await getCombined();
  return combined.map((item) => ({
    params: {
      slug: slug(item),
    },
    props: {
      title: item.title,
      published: item.published,
      link: isLike(item) ? item.url : null,
      content: item.content,
    },
  }));
}

const { title, published, link, content } = Astro.props;
---

<Post title={title} date={timestamp(published)} link={link}>
  <Fragment set:html={content} />
</Post>
