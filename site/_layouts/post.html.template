{{- define "post" -}}
<!DOCTYPE html>
<html lang="en">
  {{ template "head" . }}
  <body>
    {{ template "header" . }}
    <main class="post">
      <article>
        <h1>{{ .Data.Post.Metadata.Title }}</h1>
        <p class="subtitle">{{ .Data.Post.Published.Seconds | secondsToFormattedDate }}</p>
        {{ .Data.Post.ContentHTML }}
      </article>
    </main>
    {{ template "footer" . }}
  </body>
</html>
{{ end }}
