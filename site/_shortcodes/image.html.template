{{ define "image" }}
<picture>
  {{ if .avif }}
  <source srcset="https://media.georgeblack.me/{{ .avif }}" type="image/avif">
  {{ end }}
  {{ if .webp }}
  <source srcset="https://media.georgeblack.me/{{ .webp }}" type="image/webp">
  {{ end }}
  {{ if .jpg }}
  <img src="https://media.georgeblack.me/{{ .jpg }}" {{ if .alt }}alt="{{ .alt }}" {{ end }} type="image/jpeg">
  {{ end }}
</picture>
{{ end }}
