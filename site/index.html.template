<!DOCTYPE html>
<html lang="en">
  {{ template "head" . }}
  <body>
    {{ template "header" . }}
    <main>
      {{ range .SiteData.Posts.Posts }}
      {{ $hasExcerpt := . | hasExcerpt }}
      <article style="margin-bottom: 6em;">
        <h1><a href="/{{ . | getPostPath }}">{{ .Metadata.Title }}</a></h1>
        <p class="subtitle">{{ .Published.Seconds | secondsToFormattedDate }}</p>
        {{ if $hasExcerpt }}
        {{ .Content | getPostExcerpt }}
        <p><a href="/{{ . | getPostPath }}">Read More &#8594;</a></p>
        {{ else }}
        {{ .Content }}
        {{ end }}
      </article>
      {{ end }}
      <p><a href="/archive">Go to Archive</a></p>
    </main>
    {{ template "footer" . }}
  </body>
</html>
